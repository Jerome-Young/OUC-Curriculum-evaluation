page{
  height: 100%;
  background-color: #f5f5f5;
}
 
.container_1 {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #f2f2f2
} 
 
/*登录图片*/
.login-icon{
  flex: none;
}
.login-img{
  width: 750rpx;
  height: 400rpx;
}
 
/*表单内容*/
.login-from {
  margin-top: 20px;
  flex: auto;
  height:100%;
}
 
.inputView {
  background-color: #fff;
  line-height: 44px;
}
/*输入框*/
.nameImage, .keyImage {
  margin-left: 22px;
  width: 14px;
  height: 14px
}
 
.loginLab {
  margin: 15px 15px 15px 10px;
  color: #545454;
  font-size: 14px
}
.inputText {
  flex: block;
  float: right;
  text-align: right;
  margin-right: 22px;
  margin-top: 11px;
  color: #000;
  font-size: 14px
}
 
.line {
  width: 100%;
  height: 1px;
  background-color: #cccccc;
  margin-top: 1px;
}

checkbox-group{
  display: flex;
  justify-content:flex-end;
  margin-top: 30rpx;
  color: #545454;
  font-size: 14px;
  box-sizing: border-box;
  padding-right: 20rpx;
}

/*按钮*/
.loginBtnView {
  width: 100%;
  height: auto;
  /* background-color: #f2f2f2; */
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}
 
.loginBtn {
  width:400rpx;
  height: 90rpx;
  margin-top: 18px;
  border-radius: 100rpx;
  background: linear-gradient(120deg, #b474f0 0%, rgb(94, 148, 248) 100%);
  color: white;
  font-size: medium;
  line-height: 90rpx;
  text-align: center;
}

.btn-hover {
  background: linear-gradient(120deg, #cb9af8 0%, rgb(158, 187, 241) 100%);
}

/* 注册按钮 */
.register{
  margin-top: 11px;
  border-radius: 100rpx;
  color: rgb(24, 144, 255);
  border-width: 1rpx 1rpx 1rpx 1rpx;
  border-color: rgb(24, 144, 255);
  border-style: solid;
  text-align: center;
  width:400rpx;
  height: 90rpx;
  line-height: 90rpx;
}

/* 个人中心页面 */
.log_box1{
  width: 750rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
  background-color: white;
  border-style: 6px solid #f5f5f5;
}

.log_box2{
  position: relative;
  display: flex;
  padding: 15px;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  background-color: white;
  padding-top: 20px;
}
/* 头像 */
.top_head {
  margin-top: 50rpx;
  margin-left: 60rpx;
  width: 200rpx; 
  height: 200rpx; 
  border-radius: 100%; 
  border: 1px solid rgba(51, 51, 51, 1);
}

.name{
  line-height: 60rpx;
  width: 280rpx;
  height: 240rpx;
  margin: 120rpx 80rpx;
  font-size: 50rpx;
  text-align: center;
}

.float{
  float: left;
}

.listimage{
  position: absolute;
  top: 18px;
  right: 25px;
  width: 25px;
  height: 25px;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.log_box3{
  display: inline-block;
  width: 20px;
  margin-right: 5px;
}

.log_box3 image{
  width: 100%;
  height: 20px;
  vertical-align: -2px;
}

.log_box4{
  display: inline-block;
  margin-left: 10px;
  font-size: 14px;
  color: black;
}