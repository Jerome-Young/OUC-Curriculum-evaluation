.nav_container{
  position: relative;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  background-color: white;
}

.nav_add{
  height: 100rpx;
}

.nav_icon{
  display: inline-block;
  width: 20px;
}

.nav_icon image{
  width: 100%;
  height: 20px;
  vertical-align: -2px;
}

.listimage{
  position: absolute;
  top: 48rpx;
  right: 25rpx;
  width: 50rpx;
  height: 50rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.nav_text{
  display: inline-block;
  margin-left: 10px;
  font-size: 14px;
  color: black;
}

/* 详细信息展示 */
.text_detail{
  position: absolute;
  right: 100rpx;
  color: rgb(118, 118, 118);
}

