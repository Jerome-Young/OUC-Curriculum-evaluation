<view class="pass_container">
  <text class="title">旧密码：</text>
  <input password="{{show}}" class="text" bindinput="old_password" placeholder="{{old_text}}"/>
</view>
<view class="pass_container">
  <text class="title">新密码：</text>
  <input password="{{show}}" class="text" bindinput="new_password" placeholder="{{new_text}}"/>
</view>

<button class="pass_button" bindtap="passchange">确定</button>
<checkbox-group bindchange="isshowpas" style="display: inline-block" class="checkbox">
  <label wx:for="{{items}}" wx:key="this">
    <checkbox style="transform: scale(0.9,0.9);" value="{{item.name}}" checked="{{item.checked}}" />{{item.value}}
  </label>
</checkbox-group>

