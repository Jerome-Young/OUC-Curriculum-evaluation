/* pages/account/account.wxss */
.container {
  padding: 0px;
  height: auto;
}
.slide-image{
  display: block;
  height: 380rpx;
  width:100%
}
.function_container{
  display:flex;
  flex-wrap: wrap;
  width:100%;
}
.function_item{
  width:33%;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  font-size:12px;
  box-sizing:border-box;
  padding-bottom:10px;
  padding-top:10px
}
.function_img{
  width:60px;
  height:60px;
}
.function_name{
  padding-top:5px
}
.divider{
  background:#f5f5f5;
  height: 40rpx;
  width:100%;
}
.specialities_layout{
  display:flex;
  flex-wrap: wrap;
  width:100%;
  height: 40rpx;
  flex-direction:row;
  margin-left: 30rpx;
  margin-top:30rpx;
  margin-bottom: 30rpx;
}
.view_divider{
  background: #EEA9B8;
  padding-top: 14rpx;
  height: 40rpx;
  width:10rpx;
}
.specialities_text {
  margin-left: 20rpx;
  height: 100%;
  font-size: 16px;
}
/* 热门课程 */
.class_list{
  position: relative;
  height: 50rpx;
  padding: 20rpx 0 20rpx 30rpx;
  margin-bottom: 10rpx;
  border-bottom: 1rpx rgb(232, 232, 235) solid;
}

.index{
  margin-right: 20rpx;
}

.intro{
  display: inline-block;
  font-size: 36rpx;
}

.love{
  float: right;
  padding-top: 8rpx;
  margin-right: 100rpx;
  height: 40rpx;
  width: 40rpx;
}

.lovenum{
  position: absolute;
  display: inline-block;
  padding-top: 8rpx;
  left: 88%;
  font-size: 26rpx;
}