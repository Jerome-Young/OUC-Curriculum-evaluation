/* pages/pub_basic/pub_basic.wxss */
/* 横向滑动列表 */
.scroll-x{
  height:100rpx;
  white-space:nowrap;
  display:flex;
}
/* 隐藏scrollbar */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.kind_contain{
  width: 100%;
  height: 90rpx;
  display: flex;
  border-bottom: 1rpx solid #eee;
  background: #fff;
  align-items: center;
  position: relative;
}

.view-parent{
  display:inline-block;
}

.nav-text {
  width:120rpx;
  height:60rpx;
  margin:0 16rpx;
  font-size:28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 4rpx;
  box-sizing: border-box;
  background-color: rgb(180,180,180);
}

.view-item{
  width:240rpx;
  height:60rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size:28rpx;
  font-style:#222;
  background:rgb(1,168,236);
  margin:20rpx;
  box-shadow: 1rpx 1rpx 2rpx 1rpx rgba(0,0,0, 0.15);
}

.tab-on {
  color: #000;
  font-size: 28rpx;
  font-weight: 600;
  border-bottom: 4rpx solid #915cbd;
}
/* 分割线 */
.divider{
  background:#f5f5f5;
  height: 40rpx;
  width:100%;
}

.text{
  border: double #000 10rpx;
}
.left-text{
  display: inline-block;
  text-align: left;
  padding-left: 20rpx;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: bolder;
}
.teacher-text{
  font-size: 28rpx;
  font-weight: 500;
}
.right-text{
  /* display: inline-block; */
  text-align: right;
  padding-right: 40rpx;
}
.score-text{
  font-size: 28rpx;
  font-weight: 500;
}