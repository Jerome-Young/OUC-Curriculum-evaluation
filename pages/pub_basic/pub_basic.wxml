<!-- 分隔符 -->
<view class='divider' />
<!-- 课程信息 -->
<scroll-view scroll-y class="scroll-y">
  <view class="text" wx:for="{{Teacher}}" >
    <view class="left-text"bindtap="click_detail"data-teacher="{{item.teacher}}"data-classname="{{item.classname}}">
      <text>{{item.classname}}\n</text>
      <text class="teacher-text">教师：{{item.teacher}}</text>
    </view>
    <view class="right-text">
      <text class="score-text">评分：{{item.love}}</text>
    </view>
  </view>

</scroll-view>
    
