<!-- 横向滑动列表 -->
<view class="kind_contain" wx:for="{{class_list}}" wx:key="id" wx:for-index="class_listindex">
  <view>
      <view class="nav-text">{{item.title}}</view>
  </view>
  <scroll-view scroll-x class="scroll-x" scroll-with-animation scroll-left="{{class_list[class_listindex].scrollLeft}}">
    <view class="view-parent" wx:for="{{item.list_detail}}" wx:for-item="cell" wx:for-index="cellindex" bindtap="{{item.collegeSelect}}" data-txt="{{cell.txt}}" data-id="{{cellindex}}">
      <view class="view-item {{cellindex==class_list[class_listindex].collegeCur+1?'tab-on':''}}">{{cell.txt}}</view>
    </view>
  </scroll-view>
</view>

<!-- 分隔符 -->
<view class='divider' />
<!-- 课程信息 -->
<scroll-view scroll-y class="scroll-y">
  <view class="text" wx:for="{{Teacher}}">
    <view class="left-text" bindtap="click_detail" data-id="{{item._id}}" data-starid="{{item.starid}}" data-people="{{item.people}}" data-love="{{item.love}}">
      <view>{{item.classname}}\n</view>
      <view class="teacher-text">教师：{{item.teacher}}</view>
    </view>
    <view class="right-text">
      <view class="score-text">评分：{{item.love}}</view>
    </view>
  </view>
</scroll-view>
    
