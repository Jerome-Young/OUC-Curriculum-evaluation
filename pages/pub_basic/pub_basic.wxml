<!-- 横向滑动列表 -->
<view class="kind_contain">
  <view>
    <view class="nav-text">数学</view>
  </view>
  <scroll-view scroll-x class="scroll-x" scroll-with-animation scroll-left="{{scrollLeft_math}}rpx">
    <view class="view-parent" wx:for="{{math_list}}" wx:key="id" bindtap="collegeSelect_math" data-id="{{index}}">
      <view class="view-item {{index==collegeCur_math+1?'tab-on':''}}">{{item.txt}}</view>
    </view>
  </scroll-view>
</view>
