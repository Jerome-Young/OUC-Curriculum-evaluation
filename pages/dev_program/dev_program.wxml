  <view class="tab">
    <view class="tab-nav" style='font-size:12px'>
    <view wx:for="{{tabnav.tabitem2}}" bindtap="setTab2" data-tabindex="{{index}}" style="min-width:33.3%;max-width:33.3%;text-align:center;height: 80rpx;background: #fff;border-bottom:{{index>4?'1rpx solid #ddd;':''}}">{{item.text}}</view>
    <view>
    <view class="tab-line" style="width:{{100/tabnav.tabnum2}}%;transform:translateX({{100*showtab2}}%);"></view>
    </view>
  </view>
  </view>
</scroll-view>

