<!--滚动标签一-->
<scroll-view scroll-x="true" style='width: 100%; white-space:nowrap; '>
  <!-- tab -->
  <view class="tab">
    <view class="tab-nav" style='font-size:12px'>
    <view wx:for="{{tabnav.tabitem1}}" bindtap="setTab1" data-tabindex="{{index}}" style="min-width:20%;max-width:20%;text-align:center;height: 80rpx;background: #fff;border-bottom:{{index>4?'1rpx solid #ddd;':''}}">{{item.text}}</view>
    <view>
    <view class="tab-line" style="width:{{100/tabnav.tabnum1}}%;transform:translateX({{100*showtab1}}%);"></view>
    </view>
  </view>
  </view>
</scroll-view>
<!--滚动标签二-->
<scroll-view scroll-x="true" style='width: 100%; white-space:nowrap; '>
