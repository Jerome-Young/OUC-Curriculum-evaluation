/* pages/login/login.wxss */
page {
  overflow:hidden; 
  position:fixed; 
  background-image:url('https://ss2.bdstatic.com/70cFvnSh_Q1YnxGkpoWK1HF6hhy/it/u=1482909759,3094548675&fm=15&gp=0.jpg'); 
  margin: 0px; 
  /*下面的是关键的设置100%显示*/ 
  background-size: 100% 100%; 
}

.login_box{
  width: 90%;
  position: absolute;
  top: 10%;
  left: 5%;
}
.section{
  width: 100%;
  border-bottom: 4rpx solid #FFF;
  margin-top: 40rpx;
  position: relative;
}
.section input{
  height: 100rpx;
  color: #FFF;
  box-sizing: border-box;
  padding-left: 80rpx;
  font-size: 36rpx;
}
.section image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 20rpx;
  left: 10rpx;
}
.color{
  color: #FFF;
}

/* 注册按钮 */
.register {
  width:400rpx;
  height: 90rpx;
  margin-top: 100px;
  border-radius: 100rpx;
  background-color: rgb(24, 144, 255);
  color: white;
  font-size: medium;
  line-height: 90rpx;
  text-align: center;
}

.btn_hover{
  background-color: rgb(105, 183 , 255);
}
